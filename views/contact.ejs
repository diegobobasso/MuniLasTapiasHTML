    <body>

        <%-include('./partials/header') %>
        
        <div class='contenedor-contact pad-y-2'>
            <h1 class='text-grande'>CONTACTO</h1>

            <form class='pad-y-2' action='/enviarcorreo' method='post'>
                <div>
                    <label for='nombre'>Nombre y apellido:</label>
                    <input type='text' name='nombre' size='25' required>

                    <label for='correo'>Correo:</label>
                    <input type='email' name='correo' size='30' required>
                </div>
                <div class='pad-y-2'>
                    <label for="mensaje">Dejanos tu consulta y nos contactaremos a la brevedad:</label>
                    <textarea name='mensaje' cols='90' rows='5' required></textarea><br>
                </div>
                <button  class='button-contact' type='submit'>Enviar</button>
            </form>    
        </div>
        <%-include('./partials/footer') %>

    </body>

</html>